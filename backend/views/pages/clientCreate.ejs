<section class="mb-3 d-flex gap-2">
  <a class="btn btn-outline-secondary btn-sm" href="/clients">Back to Clients</a>
  <a class="btn btn-outline-dark btn-sm" href="/">Home</a>
</section>

<section class="card shadow-sm">
  <div class="card-body">
    <h2 class="h5 mb-3">Create Client</h2>

    <form method="POST" action="/clients">
      <div class="mb-3">
        <label class="form-label">Full Name</label>
        <input class="form-control" name="fullName" required />
      </div>

      <div class="mb-3">
        <label class="form-label">Email</label>
        <input class="form-control" type="email" name="email" required />
      </div>

      <div class="mb-3">
        <label class="form-label">Risk Category</label>
        <select class="form-select" name="riskCategory" required>
          <option value="Low">Low</option>
          <option value="Medium">Medium</option>
          <option value="High">High</option>
        </select>
      </div>

      <div class="d-flex gap-2">
        <button class="btn btn-primary" type="submit">Create</button>
        <a class="btn btn-outline-secondary" href="/clients">Cancel</a>
      </div>
    </form>
  </div>
</section>

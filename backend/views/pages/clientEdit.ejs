<section class="mb-3 d-flex gap-2">
  <a class="btn btn-outline-secondary btn-sm" href="/clients/<%= clientt.id %>">Back to Profile</a>
  <a class="btn btn-outline-dark btn-sm" href="/clients">Back to Clients</a>
</section>

<section class="card shadow-sm">
  <div class="card-body">
    <h2 class="h5 mb-3">Update Client</h2>

    <form method="POST" action="/clients/<%= clientt.id %>/edit">
      <div class="mb-3">
        <label class="form-label">Full Name</label>
        <input class="form-control" name="fullName" value="<%= clientt.fullName %>" required />
      </div>

      <div class="mb-3">
        <label class="form-label">Email</label>
        <input class="form-control" type="email" name="email" value="<%= clientt.email %>" required />
      </div>

      <div class="mb-3">
        <label class="form-label">Risk Category</label>
        <select class="form-select" name="riskCategory" required>
          <option value="Low" <%= clientt.riskCategory === "Low" ? "selected" : "" %>>Low</option>
          <option value="Medium" <%= clientt.riskCategory === "Medium" ? "selected" : "" %>>Medium</option>
          <option value="High" <%= clientt.riskCategory === "High" ? "selected" : "" %>>High</option>
        </select>
      </div>

      <div class="d-flex gap-2">
        <button class="btn btn-primary" type="submit">Save Changes</button>
        <a class="btn btn-outline-secondary" href="/clients/<%= clientt.id %>">Cancel</a>
      </div>
    </form>
  </div>
</section>
